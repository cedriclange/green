                    </li>
                    {% endfor %}
                                       
                </ul>
            </div>
            
        </div>
            
        
        <div class="col-md-9 products-right">
            <h5>Product
                
            </h5> 
            {% for item in products %}
                
                {{ include('product/includes/product_list.html.twig') }}         
                
            {% endfor %}           
            <div class="clearfix"></div>
        </div>
        
    </div>
    <div class="clearfix"></div>
</div>
