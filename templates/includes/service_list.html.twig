
    <div class="col-md-6">
        <div class="men-pro-item simpleCart_shelfItem">
            <div class="men-thumb-item">
                {% if item.media %}
                    {% thumbnail item.media, 'big' with {'class':'pro-image-front'} %}
                    {% thumbnail item.media, 'big' with {'class':'pro-image-back'} %}
                {% endif %}
                
                <div class="men-cart-pro">
                    <div class="inner-men-cart-pro">
                        <a href="{{ path('show_service',{'id': item.id})}}" class="link-product-add-cart">Description</a>
                    </div>
                </div>
                {% if item.isNew %}
                    
                    <span class="product-new-top">New</span>
                {% endif %}

            </div>
            <div class="item-info-product ">
                <h4>
                    <a href="{{ path('show_service', {'id':item.id})}}">{{item.name}} </a>
                </h4>
